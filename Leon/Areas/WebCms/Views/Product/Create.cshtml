@model Leon.Models.VM.ViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/WebCms/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 my-4">
        <div class="card shadow my-4">
            <div class="card-header py-4">
                Add Product <a asp-action="Index" class="float-right btn btn-outline-secondary">Back to Index</a>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <fieldset class="radiogenel">
                                <legend>Add Image</legend>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="image">image</span>
                                    </div>
                                    <div class="custom-file">
                                        <input type="hidden" name="category" value="">
                                        <input type="file" class="custom-file-input imginput" id="image1" name="File" onchange="previewFile()">
                                        <label class="custom-file-label" for="category">Choose file</label>
                                    </div>
                                </div>
                                <div class="col-lg-5 col-md-5">
                                    <img src="" id="img1" height="300" style="margin-bottom: 20px;" alt="no  image">

                                </div>
                            </fieldset>
                            <div class="form-group">
                                <label for="exampleFormControlSelect1">Marka</label>
                                <select class="form-control select-category" asp-items="@Model.CategoryName" asp-for="@Model.ProductCategory.Id" id="exampleFormControlSelect1">
                                    <option value="0">Select</option>

                                </select>
                                <input type="hidden" id="categoryNameHidden" name="Category" />
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Product.Title" class="control-label"></label>
                                <input type="text" asp-for="@Model.Product.Title" id="Name" class="form-control" />
                                <span name="@Model.Product.Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Product.Description" class="control-label"></label>
                                <textarea asp-for="@Model.Product.Description" id="Name" class="form-control" style="height: 140px;"></textarea>
                                <span asp-validation-for="@Model.Product.Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                           
                            <div class="form-group">
                                <label asp-for="@Model.Product.Company" class="control-label"></label>
                                <input type="text" asp-for="@Model.Product.Company" id="Name" class="form-control" />
                                <span asp-validation-for="@Model.Product.Company" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Product.Lifting" class="control-label"></label>
                                <input type="number" asp-for="@Model.Product.Lifting" id="Name" class="form-control" />
                                <span asp-validation-for="@Model.Product.Lifting" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Product.Height" class="control-label"></label>
                                <input type="number" asp-for="@Model.Product.Height" id="Name" class="form-control" />
                                <span asp-validation-for="@Model.Product.Height" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Product.Length" class="control-label"></label>
                                <input type="number" asp-for="@Model.Product.Length" id="Name" class="form-control" />
                                <span asp-validation-for="@Model.Product.Length" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Product.OperatingMode" class="control-label">Operating Mode</label>
                                <input type="text" asp-for="@Model.Product.OperatingMode" id="Name" class="form-control" />
                                <span asp-validation-for="@Model.Product.OperatingMode" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Product.DateOfProduction" class="control-label">Date of production</label>
                                <input type="date" asp-for="@Model.Product.DateOfProduction"  id="datetimepicker" value="2021-04-08" class="form-control" />
                                <span asp-validation-for="@Model.Product.DateOfProduction" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" id="btnAddModels" class="btn btn-success name" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
    $(document).on("change", ".select-category", function () {
        //let categoryName
        $("#categoryNameHidden").val($(this).val());
    })
</script>

<script>
    $('#datetimepicker').datetimepicker({

        language: 'en-US',
        format: 'dd-MM-yyyy'

    });
</script>

}
