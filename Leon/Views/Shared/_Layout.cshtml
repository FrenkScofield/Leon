        <div class="container">
            <div class="row align-items-center">
                <!-- Header Top Link/Search Start -->
                <div class="col-lg-8 col-md-12">
                    <ul class="header-top-links">
                        <li><i class="fa fa-phone"></i><a href="#"> +994 12 492 7983</a></li>
